{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": false,
    "requireBranch": "main",
    "tag": true,
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "draft": false,
    "releaseNotes": "npx auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)' --stdout --starting-version ${version} --ending-version ${version}",
    "tokenRef": "GH_TOKEN"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [
      "gh auth status",
      "npm test",
      "npm run lint"
    ],
    "after:bump": "npx auto-changelog -p --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)' && git add CHANGELOG.md",
    "after:release": "echo \"âœ… Successfully released ${name} v${version}\""
  }
}